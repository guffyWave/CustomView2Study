<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:guffy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.appxperts.customviews2study.GuffyCustomView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:minHeight="100dp"
        android:minWidth="100dp"
        guffy:backColor="#FFFF00"
        guffy:displayText="Gufran"
        guffy:edgeColor="#FF0000" />

    <com.appxperts.customviews2study.GuffyCustomView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        guffy:backColor="#00FFFF"
        guffy:displayText="Gufran"
        guffy:edgeColor="#740047" />

</LinearLayout>
